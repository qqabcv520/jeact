{
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "release": "node scripts/release.js",
    "lint": "yarn run lint:ts && yarn run lint:style",
    "lint:fix": "yarn run lint:ts --fix && yarn run lint:style --fix",
    "lint:ts": "tslint \"packages/*/src/**/*.ts\" -c tslint.json -e \"packages/*/src/**/*.d.ts\"",
    "lint:style": "stylelint \"packages/*/src/**/*.less\" --syntax less",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "author": "fanzicai",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/core-js": "^2.5.1",
    "@types/jquery": "^3.3.38",
    "@types/node": "^10.12.18",
    "autoprefixer": "^9.8.4",
    "chalk": "^4.1.0",
    "codelyzer": "^6.0.0",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "enquirer": "^2.3.5",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "less": "^3.11.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rollup": "^2.18.1",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "semver": "^7.3.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "tslint": "~6.1.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Firefox versions"
  ],
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "packages/*/src/**/*.less": [
      "npm run lint:style",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
